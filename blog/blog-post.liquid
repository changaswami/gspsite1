---
layout: layouts/base.liquid
# No permalink here, as it's defined in .eleventy.js collection
# The 'title', 'author', 'body' etc. will come from the Contentful data object
---
<section class="page-section flex-col justify-start items-center bg-white py-20 px-6 md:px-12 lg:px-24">
    <div class="max-w-3xl mx-auto text-left py-8">
        <h1 class="text-4xl md:text-5xl font-extrabold text-blue-800 leading-tight mb-4">{{ title }}</h1>
        <p class="text-gray-600 text-md mb-6">By {{ author }} on {{ publishDate | date: "%B %d, %Y" }}</p>

        <div class="prose lg:prose-lg text-gray-800 leading-relaxed">
            {{ content | markdown | safe }} {# Render markdown/rich text as HTML #}
        </div>

        <div class="mt-10 text-center">
            <a href="/blog/" class="btn-secondary">‚Üê Back to Blog Posts</a>
        </div>
    </div>
</section>